{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    /* Also see https://reactnative.dev/docs/typescript */
    // "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "types": ["jest", "node"],
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src/",
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true
    // "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "jest.config.js", "dist"]
}
